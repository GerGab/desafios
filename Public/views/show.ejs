<h2> Productos </h2>
<% let show = products.length >0 %> 

<% if(show) { %>
    <table class="table table-dark">
        <tr style="color: white;">
            <th>id</th>
            <th>Titulo</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        <% for (product of products) {%>
            <tr>
                <td><%=product.id%></td>
                <td><%=product.title%></td>
                <td>$<%=product.price%></td>
                <td><img src=<%=product.thumbnail%> alt=""></td>
            </tr>
            <%}%>
        </table>
<%}else{%>
    <h3 class="alert alert-danger">No se encontraron productos</h3>
    <%}%>

