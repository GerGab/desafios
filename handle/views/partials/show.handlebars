<h2> Productos </h2>

{{#if show }}
    <table class="table table-dark">
        <tr style="color: white;">
            <th>id</th>
            <th>Titulo</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        {{#each products}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>$ {{this.price}}</td>
            <td><img src={{this.thumbnail}} alt=""></td>
        </tr>
        {{/each}}
        </table>
{{else}}
    <h3 class="alert alert-danger">No se encontraron productos</h3>
{{/if}}
